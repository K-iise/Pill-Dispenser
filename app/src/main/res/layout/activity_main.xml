<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 상단 바 -->
    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/Top_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0E5BDF"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/item_home2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/action_ham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/hamberger" />

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/group_1" />

            <ImageButton
                android:id="@+id/action_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="60dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/material_symbols_light_delete_outline" />

            <ImageButton
                android:id="@+id/action_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/return_button" />
        </RelativeLayout>
    </LinearLayout>


    <!--  회원명, 현재 시간 표시-->
    <TextView
        android:id="@+id/membertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="김윤기님. 2024-05-21 (18:00:00)"
        android:textColor="#0E5BDF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/Top_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 구분선 뷰-->
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/membertime"
        android:background="#0E5BDF"
        tools:ignore="MissingConstraints" />

    <!-- 등록된 기기 화면-->
    <RelativeLayout
        android:id="@+id/device"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:id="@+id/Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/circleimage"/>

        <TextView
            android:id="@+id/devicenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="12345"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E5BDF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/Image"/>


        <TextView
            android:id="@+id/devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="ET-1245"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E5BDF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_above="@id/register"
            android:layout_alignRight="@id/register"
            />


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="등록일자 : 2024-04-28"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E5BDF"
            android:layout_below="@id/devicenumber"
            android:layout_alignLeft="@id/devicenumber"
            />


    </RelativeLayout>

    <!-- 하단바 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0E5BDF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/item_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onItemClick">

            <ImageButton
                android:id="@+id/action_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/bart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/group_1" />

            <ImageButton
                android:id="@+id/action_gear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/mdi_gear" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 메뉴바(Drawer) -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer"
        tools:ignore="MissingConstraints">

        <TextView
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="48sp"
            android:text="DRAWER"
            android:background="#0E5BDF"
            android:layout_gravity="left" />
    </androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
